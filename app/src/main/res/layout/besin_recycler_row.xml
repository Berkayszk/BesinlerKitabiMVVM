<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="besin"
            type="com.berkaysazak.besinlerkitabi.model.Besin" />
        <variable
            name="listener"
            type="com.berkaysazak.besinlerkitabi.adapter.BesinClickListener" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:onClick="@{listener::besinTiklandÄ±}"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/besin_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@{String.valueOf(besin.uuid)}"
        ></TextView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="2"
        android:downloadImage="@{besin.besinGorsel}"
        app:srcCompat="@drawable/ic_launcher_background">
        ></ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/isim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{besin.besinIsim}"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            >

        </TextView>
        <TextView
            android:id="@+id/kalori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{besin.besinKalori}"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:textSize="17sp"
            >

        </TextView>

    </LinearLayout>


</LinearLayout>
</layout>